<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminProfile">

    <TextView
        android:id="@+id/AdminUsername"
        android:layout_width="117dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="187dp"
        android:autoSizeTextType="uniform"
        android:text="Admin"
        android:textAlignment="center" />

    <Button
        android:id="@+id/AddService"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="150dp"
        android:autoSizeTextType="uniform"
        android:text="Add Service"
        android:textAlignment="center" />


    <Button
        android:id="@+id/DeleteService"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="90dp"
        android:autoSizeTextType="uniform"
        android:text="Delete Service"
        android:textAlignment="center" />

    <Button
        android:id="@+id/EditService"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="30dp"
        android:autoSizeTextType="uniform"
        android:text="Edit Service"
        android:textAlignment="center" />

    <Button
        android:id="@+id/ListUsers"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="210dp"
        android:autoSizeTextType="uniform"
        android:text="List of Users"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="169dp"
        android:layout_height="142dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/download2" />

</RelativeLayout>