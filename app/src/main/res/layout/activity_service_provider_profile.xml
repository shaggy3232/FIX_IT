<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context=".ServiceProviderProfile" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="ServiceProviderProfile" android:id="@+id/LoginPage"/>
    \
    <TextView android:layout_height="40dp" android:layout_width="117dp" android:text="Admin" android:id="@+id/ProviderUsername" android:textAlignment="center" android:autoSizeTextType="uniform" android:layout_marginTop="43dp" android:layout_alignParentTop="true" android:layout_alignEnd="@+id/LoginPage"/>

    <Button android:layout_height="wrap_content" android:layout_width="175dp" android:text="Add Service" android:id="@+id/AddService" android:textAlignment="center" android:autoSizeTextType="uniform" android:layout_alignTop="@+id/ListUsers" android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/Availabiltiy"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/DeleteService"
        android:layout_marginBottom="113dp"
        android:autoSizeTextType="uniform"
        android:text="Availability"
        android:textAlignment="center" />

    <Button
        android:id="@+id/DeleteService"
        android:layout_width="337dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ListUsers"
        android:layout_marginBottom="186dp"
        android:autoSizeTextType="uniform"
        android:text="Delete Service"
        android:textAlignment="center" />

    <Button
        android:id="@+id/ListUsers"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="207dp"
        android:autoSizeTextType="uniform"
        android:text="Services Offered"
        android:textAlignment="center" />

    <ImageView android:layout_height="142dp" android:layout_width="169dp" android:layout_marginTop="12dp" android:layout_alignParentTop="true" android:layout_alignParentEnd="true" android:src="@drawable/download2"/>

</RelativeLayout>